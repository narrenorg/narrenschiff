# https://editorconfig.org/
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yaml,yml,tpl}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.{flake8,coveragerc}]
indent_style = space
indent_size = 2

[*.rst]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
